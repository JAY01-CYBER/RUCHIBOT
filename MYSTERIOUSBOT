

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $LEGEND_REPO == "RUCHIBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL01ZU1RFUklPVVMtT1MvTVlTVEVSSU9VU1VTRVJCT1QvYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    elif [[ $LEGEND_REPO == "RUCHIBOTBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL01ZU1RFUklPVVMtT1MvTVlTVEVSSU9VU1VTRVJCT1QvYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    elif [[ $LEGEND_REPO =~ $regex ]]
    then
        if [[ $LEGEND_REPO_BRANCH ]]
        then
            echo "${LEGEND_REPO}/archive/${LEGEND_REPO_BRANCH}.zip"
        else
            echo "${LEGEND_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL01ZU1RFUklPVVMtT1MvTVlTVEVSSU9VU1VTRVJCT1QvYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="RUCHIBOT.zip"
    echo "  Downloading Ruchi V2.O Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    LEGENDPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  RuchiBot V2.O Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $LEGENDPATH
    echo "    ⚜️Starting RuchiBot⚜️     "
    echo "
    RUCHIBOT
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot
